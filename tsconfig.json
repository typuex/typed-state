{
  "extends": "@tsconfig/node14/tsconfig.json",
  "files": [
    "./src/index.ts",
    "./src/types.spec.ts",
    "./src/utils.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "strict": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "stripInternal": true
  }
}
